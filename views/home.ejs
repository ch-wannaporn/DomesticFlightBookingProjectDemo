<%- include('components/header') -%>
<div
  class="flex w-full h-72 bg-cover bg-bottom justify-center items-center"
  style="
    background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8');
  "
>
  <span class="text-4xl text-white font-serif"
    >The Easiest Way to Book A Flight In Thailand!</span
  >
</div>
<div class="flex w-full md:w-2/3">
  <div class="-mt-12 flex w-full h-24 justify-between items-center">
    <div
      class="flex w-1/4 h-full rounded-l-md shadow-md bg-rose-300 px-8 py-4"
    ></div>
    <div
      class="flex space-x-2 w-3/4 h-full rounded-r-md shadow-md bg-violet-500 px-8 py-4"
    >
      <div class="flex flex-col space-y-1 w-1/3">
        <label class="text-white font-semibold">From</label>
        <select class="rounded-md px-2 py-1 focus:outline-none"></select>
      </div>
      <div class="flex flex-col space-y-1 w-1/3">
        <label class="text-white font-semibold">To</label>
        <select
          type="number"
          class="rounded-md px-2 py-1 focus:outline-none"
        ></select>
      </div>
      <div class="flex flex-col space-y-1 w-1/3">
        <label class="text-white font-semibold">Travelers</label>
        <input type="number" class="rounded-md px-2 py-1 focus:outline-none" />
      </div>
    </div>
  </div>
</div>
<%- include('components/footer') -%>
